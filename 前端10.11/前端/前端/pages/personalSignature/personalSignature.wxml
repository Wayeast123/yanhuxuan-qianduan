<view class='baseInfo'>
  <text>个人信息</text>
</view>

<view class='list'>
  <!-- <form bindsubmit="formSubmit"> -->
    <view class='name'>
        <text>昵称</text>
        <input name="nick" type='text' placeholder-style='font-size:28rpx;' value="{{userInfo.nick}}"  bindinput="handleInput1"></input>
    </view>

    <view class='phone'>
        <view>个性签名</view>
        <textarea name="sign" type='text' placeholder-style='font-size:58rpx;' value="{{userInfo.sign}}" bindinput="handleInput2" maxlength="50"></textarea>
    </view>

    <view class='name'>
      <text>头像</text>
      <image class="image" bindtap="onChooseImage" src='{{headImage[0] ? headImage[0] : "../../img/shangchuan.png"}}' mode='aspectFit'></image>
    </view>
   <!-- </form>   -->
</view>

<!-- 关于考研 begin -->
<view class='baseInfo'>
  <text>关于考研</text>
</view>

<view class='list'>
  <form bindsubmit="formSubmit">
    <view class='name'>
        <text>考研年份</text>
        <input name="nick" type='text' placeholder-style='font-size:28rpx;' value="请选择"  bindinput="handleInput"></input>
    </view>
    <view class='name'>
        <text>原学校名称</text>
        <input name="nick" type='text' placeholder-style='font-size:28rpx;' value="请选择"  bindinput="handleInput"></input>
    </view>
    <view class='name'>
        <text>原专业名称</text>
        <input name="nick" type='text' placeholder-style='font-size:28rpx;' value="请选择"  bindinput="handleInput"></input>
    </view>
    <view class='name'>
        <text>录取院校</text>
        <input name="nick" type='text' placeholder-style='font-size:28rpx;' value="请选择"  bindinput="handleInput"></input>
    </view>
    <view class='name'>
        <text>录取专业</text>
        <input name="nick" type='text' placeholder-style='font-size:28rpx;' value="请选择"  bindinput="handleInput"></input>
    </view>
    <view class='name'>
        <text>初试成绩</text>
        <input name="nick" type='text' placeholder-style='font-size:28rpx;' value="请填写"  bindinput="handleInput"></input>
    </view>
    <view class='name'>
        <text>复试成绩</text>
        <input name="nick" type='text' placeholder-style='font-size:28rpx;' value="请填写"  bindinput="handleInput"></input>
    </view>
    
    <button class='button' formType="submit">更改个人信息</button>
  </form>  
</view>
<!-- 关于考研 end -->