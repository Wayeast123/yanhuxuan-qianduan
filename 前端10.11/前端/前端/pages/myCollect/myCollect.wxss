/* 星星组件 */
@font-face {  
  font-family: 'FontAwesome';  
  src: url('https://netdna.bootstrapcdn.com/font-awesome/3.2.1/font/fontawesome-webfont.woff?v=3.2.1') format('woff'); 
}
.star{margin-right:12rpx;}/*五角星之间的间距*/
/*五角星*/
.star, .icon:before {content: '\f005'; font-family: FontAwesome; position: absolute;left: 0;top: -2px;display: block;  overflow: hidden;}
.star, .icon {display: block; font-size: 16px; text-align: center; width: 38rpx;height: 56rpx;line-height: 56rpx;position: relative;white-space: pre;}
/*灰色五角星*/
.star ,.icon_gray{color:#aaa}
/*黄色五角星*/
.star, .icon_yellow:before {color: #F63;}