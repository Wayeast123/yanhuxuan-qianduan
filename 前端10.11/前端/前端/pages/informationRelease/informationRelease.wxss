/* 头部区域横向布局 */
.videoContainer .header{
  border:5rpx solid #2693FF;
  display: flex;
  padding: 10rpx;
  margin: 10rpx;
  background-color:  #fff;
}
/* 图片样式 */
.videoContainer .header image{
  width: 60rpx;
  height: 60rpx;
}
/* 搜索框 */
.videoContainer .header .search{
  border:1rpx solid #eeeeee;
  border-radius: 20rpx;
  /* flex-grow 可拉伸 flex-shrink 可压缩 flex-basis 自身宽度 */
  /* flex默认值:flex-grow:0,flex-shrink:1,flex-basis:auto */
  /* flex:1 flex-grow:1,flex-shrink:1,flex-basis:0% */
  /* flex:auto flex-grow:1,flex-shrink:1,flex-basis:auto */
  flex: 1;
  margin: 0 20rpx;
  font-size: 26rpx;
  text-align:center;
  line-height: 60rpx;
  color: #2693FF;
}
.blog-list{
  margin-top: 10rpx;
}

.blog-panel{
  margin-bottom: 20rpx;
  box-sizing: border-box;
}


page{
  background-color: #f1f1f1;
}

.blog{
  padding: 20rpx;
  background-color: #fff;
}

.blog-box{
  display: flex;
  margin-top:10rpx;
}

.blog-nickName{
  font-size: 32rpx;
  display: flex;
  align-content: center;
}
.img1{
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.mingzi{
  position: relative;
  top: 6rpx;
}

.blog-portrait{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.blog-time{
  font-size: 24rpx;
  color: #939393;
  margin-right: 10rpx;
}

.blog-content{
  margin: 10rpx 0;
  font-size: 27rpx;
  font-weight: 500;
  line-height: 1.5;
}

.blog-img{
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
}
.img-box{
  display: flex;
  justify-content: space-between;
}

.blog-img, .img{
width:220rpx;
height:210rpx;
margin-bottom: 10rpx;
}
.img{
  border-radius: 20rpx;
}

.blog-img, .img:nth-child(3n){
  margin-right: 0;
}






