.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  background: #356CFE;
  height: 262rpx;
  border-radius: 0 0 50% 50%;
  
}

.userinfo {
  margin-left: 24rpx;
  position: relative;
  margin-top: 134rpx;
  z-index: 99;
  background: #FFFFFF;
  box-shadow: 0 4rpx 8rpx 2rpx rgba(0,0,0,0.18);
  border-radius: 16rpx;
  width: 698rpx;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
}

.userinfo-avatar {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
}

