  border-top-right-radius: 20px;
}
.swiper-tab-list{  
  flex: 1;
  padding: 28rpx 0;
  text-align: center;
}  
.on{ 
  color: #ed9d36;  
  /* border-bottom: 6rpx solid #4990E2; */
  } 
  .on::after {
  content: '';
  width: 50%;
  height: 1px;
  display: block;
  margin: 0 auto;
