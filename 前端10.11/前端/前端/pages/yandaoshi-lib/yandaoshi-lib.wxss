/* 选择框 begin */
.selection{
  height: 100rpx;
  width: 100%;
  margin-top: 15rpx;
  background-color:rgb(246, 246, 246);
  display: flex;
  justify-content: space-evenly;
}
.selection>.left{
  width: 48%;
  height: 100%;
  margin-right: 10rpx;
  border-radius: 15rpx;
  background-color: rgb(255, 255, 255);
  display: flex;
  justify-content: center;
